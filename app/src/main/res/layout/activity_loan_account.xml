<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#4040"
        android:orientation="vertical"
        tools:context=".LoanAccount">
    <EditText
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:backgroundTint="@color/yellow"
            android:background="@drawable/round_edges_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Adhaar Number"
            android:id="@+id/loanadhaarNum"/>
    <EditText
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/gray"
            android:background="@drawable/round_edges_login"
            android:backgroundTint="@color/mediumPink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Loan Account Number"
            android:id="@+id/loanaccNum"/>
    <Button
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/gray"
            android:background="@drawable/button_round"
            android:backgroundTintMode="src_over"
            android:text="check status"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/loan_status"/>
</LinearLayout>