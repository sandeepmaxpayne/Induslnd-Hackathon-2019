<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#4040"
        android:orientation="vertical"
        tools:context=".cash.Withdraw">

    <EditText
            android:gravity="center"
            android:backgroundTintMode="src_over"
            android:backgroundTint="@color/pink"
            android:background="@drawable/round_edges_login"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/aadharnum" android:hint="@string/aadhar_number"/>
    <EditText
            android:gravity="center"
            android:background="@drawable/round_edges_login"
            android:backgroundTint="@color/pink_accent"
            android:backgroundTintMode="src_over"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/acc_no" android:hint="@string/account_number"/>
    <Spinner
            android:popupBackground="@drawable/spinner_back"
            android:backgroundTintMode="src_over"
            android:backgroundTint="@color/green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/spincode"/>
    <EditText
            android:gravity="center"
            android:backgroundTint="@color/green"
            android:backgroundTintMode="src_over"
            android:background="@drawable/round_edges_login"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/amt" android:hint="amount"/>
    <EditText
            android:gravity="center"
            android:background="@drawable/round_edges_login"
            android:backgroundTintMode="src_over"
            android:backgroundTint="@color/mediumPink"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/debnarr" android:hint="debit narration (optional)"/>
    <EditText
            android:gravity="center"
            android:backgroundTint="@color/coldPink"
            android:backgroundTintMode="src_over"
            android:background="@drawable/round_edges_login"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/crnarr" android:hint="credit narration (optional)"/>
    <TextView
            android:gravity="center"
            android:background="@drawable/round_edges_login"
            android:backgroundTintMode="src_over"
            android:backgroundTint="@color/firebrick"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/with_curr_bal" android:hint="current balance"/>
    <Button
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/salmon"
            android:backgroundTintMode="src_over"
            android:text="Withdraw"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:background="@drawable/button_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnwithdraw"/>

</LinearLayout>