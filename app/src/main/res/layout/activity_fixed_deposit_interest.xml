<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTintMode="multiply"
        android:background="@color/light"
        android:backgroundTint="@color/coldPink"
        tools:context=".invest.FixedDepositInterest">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="45dp"
                  android:layout_height="wrap_content"
                  android:textSize="25dp"
                  android:textColor="@color/deep_purple"
                  android:text="Fixed Deposit Calculator"
        />
        <TextView

                android:layout_width="wrap_content"
                  android:layout_marginTop="20dp"
                  android:textSize="20dp"
                  android:textColor="@color/red"
                  android:text="min deposit: â‚¹5000"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <EditText android:layout_width="wrap_content"
                  android:layout_marginTop="15dp"
                  android:inputType="number"
                  android:id="@+id/fd"
                  android:hint="enter amount to deposit"
                  android:textSize="20dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="25dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/mediumPink"
                  android:textSize="15dp"
                  android:textStyle="italic"
                  android:text="Tenure"
                  android:layout_height="wrap_content"/>
        <Spinner
                android:popupBackground="@color/deep_purple"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/yearOption" android:layout_weight="1"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginLeft="15dp"
                  android:text="rate of interest offered"
                  android:id="@+id/showRate"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginTop="20dp"
                  android:orientation="horizontal"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:textSize="20dp"
                  android:textStyle="italic"
                  android:text="Interest offered: "
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="20dp"
                    android:id="@+id/showInt"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>


    </LinearLayout>
    <EditText android:layout_width="wrap_content"
              android:layout_marginTop="15dp"
              android:layout_gravity="center_horizontal"
              android:id="@+id/eid"
              android:inputType="text"
              android:hint="enter your email address"
              android:layout_height="wrap_content"/>
    <Button
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/coldPink"
            android:backgroundTintMode="add"
            android:background="@drawable/round_edges_login"
            android:layout_gravity="center_horizontal"
            android:text="click to contact bank"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/bank_contact"/>
    <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
           android:textStyle="bold"
           android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:id="@+id/dispAlert"/>


</LinearLayout>