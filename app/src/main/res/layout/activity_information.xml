<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#4040"
        android:orientation="vertical"
tools:context=".Information">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="ABOUT APPLICATION"
              android:layout_gravity="center"
              android:textStyle="italic"
              android:textSize="40dp"
              android:textColor="@color/deep_purple"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:clipToPadding="false"
                  android:gravity="center">
        <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:backgroundTint="@color/background">

            <LinearLayout android:layout_width="match_parent"
                          android:gravity="center"
                          android:orientation="vertical"
                          android:layout_height="match_parent">
                <TextView android:layout_width="wrap_content"
                          android:textSize="30dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"
                          android:layout_marginBottom="100dp"
                          android:text="INDUSLND HACKATHON 2019"/>

                <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                          android:text="This application is a prototype of the real transaction application to meet the users end to end requirements."
                          android:textSize="20sp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:gravity="center"
                          android:textSize="20sp"
                          android:text="The application mainly focuses on the balance that can be transacted for different uses on a single platform.\n
This includes idea of shopping and comparision of products can be done between the local stores and online stores. Based on the predicted conclusion Customer get the best outcome.
\nPasswordless Login instead of OTP one of the best method of login without Sim cards to shop and transact using this application.\n for using  Whole Idea by Sandeep Dutta "/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>