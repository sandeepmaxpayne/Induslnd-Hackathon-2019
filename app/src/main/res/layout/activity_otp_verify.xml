<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="#4040"
        tools:context=".OtpVerify">
    <EditText
            android:layout_marginTop="5dp"
            android:textColorHint="@color/pink"
            android:gravity="center"
            android:textSize="20dp"
            android:backgroundTint="@color/deep_purple"
            android:background="@drawable/round_edges_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/otp"
            android:hint="@string/verification_code"/>
    <ProgressBar
            android:layout_marginTop="5dp"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress"/>
    <Button
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/deep_purple"
            android:backgroundTintMode="add"
            android:text="@string/verify"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:background="@drawable/button_circle"
            android:layout_height="wrap_content" android:id="@+id/verifyBtn"/>
    <Button
            android:backgroundTintMode="multiply"
            android:backgroundTint="@color/deep_purple"
            android:text="Authenticate"
            android:layout_width="wrap_content"
            android:background="@drawable/button_round"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" android:id="@+id/authenticateBtn"/>
    <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:text="tap verify to get random OTP"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:id="@+id/randomval"/>
    <Button

            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_round"
            android:backgroundTint="@color/green"
            android:autoSizeMaxTextSize="25dp"
            android:backgroundTintMode="add"
            android:text="PasswordLess Login using Biometric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bioLogin"/>
</LinearLayout>