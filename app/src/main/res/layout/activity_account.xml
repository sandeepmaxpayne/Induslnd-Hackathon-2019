<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4044"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        tools:context=".Account">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="Deposit balance"
                android:background="#4044"
                android:layout_gravity="left"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/deposit" tools:layout_editor_absoluteY="106dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="Withdrraw Balance"
                android:background="#4046"
                android:layout_marginLeft="80dp"
                android:layout_width="wrap_content"
                android:layout_gravity="clip_horizontal"
                android:layout_height="wrap_content" android:id="@+id/withdraw" tools:layout_editor_absoluteY="189dp"
                app:layout_constraintStart_toStartOf="@+id/deposit" app:layout_constraintEnd_toEndOf="@+id/deposit"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:textSize="25dp"
                android:textStyle="italic"
                android:textColor="@color/dark"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/accBal" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Mobile, DTH, recharge (Enter)"
                android:layout_width="wrap_content"
                android:textColor="@color/pink"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" android:id="@+id/rch" android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>