<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@color/light"
        tools:context=".shop_items.DeliveryCalculator">


    <TextView
            android:layout_marginTop="10dp"
            android:text="condition: *expected time should be between 9AM to 10PM\n
                        *item quantity should be greater than 5"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView4"/>
    <TextView
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:hint="Current Time"
            android:textSize="20dp"
            android:textColor="@color/deep_purple"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/displayTime"/>
    <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="Enter distance in km between shop and your house"
            android:ems="10"
            android:id="@+id/dist" />
    <EditText
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="enter number of qty "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/noqty"/>
    <Button
            android:text="predict"
            android:background="@drawable/button_round"
            android:backgroundTintMode="multiply"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/predel"/>
</LinearLayout>