<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".shop_items.Category"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/light_back"
>
   <!-- <GridView android:layout_width="match_parent"
              android:id="@+id/category_grid"
              android:layout_height="match_parent"/> -->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textSize="35dp"
                  android:layout_gravity="center_horizontal"
                  android:textColor="@color/deep_purple"
                  android:text="Shopping Categories"
                  android:textStyle="italic"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clipToPadding="false"
                  android:orientation="horizontal">
        <android.support.v7.widget.CardView
                android:id="@+id/books"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/inred"
                android:clickable="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:focusable="true">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="BOOKS"
                          android:textSize="25dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/cloths"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/light_red"
                android:focusable="true"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="25dp"
                          android:text="CLOTHS"
                          android:textStyle="bold"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clipToPadding="false"
                  android:orientation="horizontal">
        <android.support.v7.widget.CardView
                android:id="@+id/toys"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/salmon"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_horizontal|center_vertical"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="TOYS"
                          android:textSize="25dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/food"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/red"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="151dp"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="FOOD"
                          android:layout_gravity="center_horizontal"
                          android:textSize="25dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clipToPadding="false"
                  android:orientation="horizontal">
        <android.support.v7.widget.CardView
                android:id="@+id/bags"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/firebrick"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"

                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="BAG"
                          android:textStyle="bold"
                          android:textSize="25dp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/sunglass"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/coldPink"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="151dp"
                          android:layout_gravity="center_horizontal|center_vertical"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="SUNGLASS"
                          android:textStyle="bold"
                          android:layout_gravity="center_horizontal"
                          android:textSize="25dp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clipToPadding="false"
                  android:orientation="horizontal">
        <android.support.v7.widget.CardView
                android:id="@+id/shoe"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/hotPink"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="SHOES"
                          android:textSize="25dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/movie"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/deepPink"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="151dp"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="MOVIES"
                          android:textSize="25dp"
                          android:layout_gravity="center_horizontal"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clipToPadding="false"
                  android:orientation="horizontal">
        <android.support.v7.widget.CardView
                android:id="@+id/home"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/mediumPink"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_horizontal|center_vertical"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="HOME APPLIANCE"
                          android:gravity="center"
                          android:textSize="20sp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/phone"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/lightViolet"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="151dp"
                          android:layout_gravity="center_horizontal|center_vertical"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:layout_gravity="center_horizontal"
                          android:text="PHONE"
                          android:textSize="25dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clipToPadding="false"
                  android:orientation="horizontal">
        <android.support.v7.widget.CardView
                android:id="@+id/computer"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/lightPink"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_horizontal|center_vertical"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="COMPUTER"
                          android:textStyle="bold"
                          android:textSize="25dp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/music"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/light_red"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="151dp"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="MUSIC"
                          android:layout_gravity="center_horizontal"
                          android:textSize="25dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:clipToPadding="false"
                  android:layout_marginBottom="15dp"
                  android:orientation="horizontal">
        <android.support.v7.widget.CardView
                android:id="@+id/games"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/lightSalmon"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_gravity="center_horizontal|center_vertical"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="GAMES"
                          android:textSize="25dp"
                          android:textStyle="bold"
                          android:layout_gravity="center_vertical"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/hotel"
                android:layout_height="60dp"
                android:layout_width="160dp"
                android:backgroundTint="@color/mediumPink"
                android:layout_marginBottom="5dp"
                android:layout_margin="5dp">
            <LinearLayout android:layout_width="151dp"
                          android:layout_gravity="center_vertical|center_horizontal"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:textSize="20dp"
                          android:layout_gravity="center_horizontal"
                          android:text="BOOK HOTELS"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_marginEnd="15dp"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:textStyle="normal"
                  android:background="@color/lightViolet"
                  android:textColor="@color/red"
                  android:textSize="20dp"
                  android:text="Shop from other Online Store"
                  android:layout_height="wrap_content"/>
        <Spinner
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spnBrowse"
                android:backgroundTint="@color/mediumPink"
                android:popupBackground="@drawable/spinner_back"
                android:layout_weight="1"/>
        <!-- android:popupBackground="@color/deep_purplede" -->
    </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>